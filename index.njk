---
layout: layouts/base.njk
title: All Posts
pagination:
  data: collections.blog
  size: 10
  alias: posts
  reverse: false
---

<div class="blog-grid">
  {% for post in posts %}
    <article class="blog-post-card">
      <header>
        <h3>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <small>{{ post.date | readableDate }}</small>
      </header>
      <section>
        <p>{{ post.data.description or (post.templateContent | excerpt(200)) }}</p>
      </section>

      {% import "partials/tags.njk" as tagsHelper %}
      {{ tagsHelper.render("tags", "tag", post.data.tags) }}
      {{ tagsHelper.render("categories", "category", post.data.categories) }}
    </article>
  {% endfor %}
</div>

<nav class="pagination" aria-label="Pagination">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">← Previous</a>
  {% endif %}

  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Next →</a>
  {% endif %}
</nav>
