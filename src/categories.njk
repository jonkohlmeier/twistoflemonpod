---
pagination:
  data: collections.categories
  size: 1
  alias: categorySlug
permalink: /category/{{ categorySlug }}/
layout: layouts/base.njk
---

{% set categoryData = collections.categories[categorySlug] %}
{% set posts = categoryData.posts %}
{% set categoryName = categoryData.name %}
{% set title = "Category: " + categoryName %}

<h1>Category: {{ categoryName }}</h1>
<p>{{ posts.length }} post{% if posts.length != 1 %}s{% endif %}</p>

<div class="blog-grid">
  {% for post in posts %}
    <article class="blog-post-card">
      <header>
        <h3>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <small>{{ post.date | readableDate }}</small>
      </header>
      <section>
        <p>{{ post.data.description or (post.templateContent | excerpt(200)) }}</p>
      </section>

      {% import "partials/tags.njk" as tagsHelper %}
      {{ tagsHelper.render("tags", "tag", post.data.tags) }}
      {{ tagsHelper.render("categories", "category", post.data.categories) }}
    </article>
  {% endfor %}
</div>

<p><a href="/">‚Üê Back to home</a></p>
